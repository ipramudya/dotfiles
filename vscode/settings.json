{
  // Explorer
  "explorer.autoReveal": false,

  // Editor
  // "editor.foldingImportsByDefault": true,
  "editor.wordWrap": "on",

  // Prettier
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  "prettier.endOfLine": "lf",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },

  // "html.format.enable": false,

  // ESLint
  "eslint.format.enable": true,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.addMissingImports": true
  },

  "editor.multiCursorModifier": "ctrlCmd",

  //Code Runner
  "code-runner.executorMap": {
    "c": "gcc $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt",
    "cpp": "g++ $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt",
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt"
  },

  // Code Runner
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.runInTerminal": true,
  "code-runner.saveFileBeforeRun": true,

  "code-runner.preserveFocus": false,
  "code-runner.clearPreviousOutput": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "window.menuBarVisibility": "visible",
  "workbench.statusBar.visible": true,
  "editor.minimap.enabled": false,
  "explorer.confirmDelete": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.lineHeight": 24,
  "workbench.tree.indent": 14.5,

  // Font
  // "editor.fontFamily": "Fira Code",
  // "editor.fontFamily": "ui-monospace",
  "editor.fontFamily": "MonoLisa",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.fontSize": 12,

  // EJS as HTML Setting
  "files.associations": {
    "*.ejs": "html",
    "*.md": "mdx"
  },

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // Single Quotes

  "prettier.jsxSingleQuote": false,
  "prettier.singleQuote": true,
  "typescript.suggest.paths": false, // path-intellisense,

  //Auto Close Tag
  "auto-close-tag.enableAutoCloseTag": true,
  "auto-close-tag.enableAutoCloseSelfClosingTag": true,
  "auto-close-tag.activationOnLanguage": ["*"],
  "auto-close-tag.disableOnLanguage": ["c", "cpp"],

  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  "editor.linkedEditing": true,

  //Terminal
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 14,

  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.lineHeight": 1.25,

  "javascript.updateImportsOnFileMove.enabled": "always",

  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "none",
  "terminal.integrated.profiles.windows": {
    "C:\\Program Files\\Git\\bin\\bash.exe (migrated)": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "args": []
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  //Auto closing brackets
  "[javascriptreact]": {
    "editor.autoClosingBrackets": "always"
  },
  "editor.inlineSuggest.enabled": true,
  "material-icon-theme.folders.color": "#26a69a",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "git.autofetch": true,
  "typescript.validate.enable": true,

  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.views.repositories.files.layout": "list",
  "gitlens.codeLens.enabled": false,

  "workbench.iconTheme": "vscode-icons",
  "go.toolsManagement.autoUpdate": true,

  // Inline Parameters
  "inline-parameters.enabled": true,
  "workbench.colorCustomizations": {
    "inlineparameters.annotationBackground": "#14274E",
    "inlineparameters.annotationForeground": "#9BA4B4",
    "tree.indentGuidesStroke": "#F1EEE9"
  },

  // Indent Rainbow
  // Using the light mode
  "indentRainbow.indicatorStyle": "light",
  // we use a simple 1 pixel wide line
  "indentRainbow.lightIndicatorStyleLineWidth": 1.5,
  // the same colors as above but more visible
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "markdown-preview-enhanced.liveUpdate": true,
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "svelte.enable-ts-plugin": true,

  "git.enableSmartCommit": true,
  "html.format.templating": true,
  "svelte.plugin.svelte.note-new-transformation": false,
  "workbench.productIconTheme": "fluent-icons",
  "editor.stickyScroll.enabled": true,
  "extensions.ignoreRecommendations": true,
  "git.confirmSync": true,
  "workbench.colorTheme": "Catppuccin Mocha",

  /* Sundial -- automatic theme switcher based on day */
  "window.autoDetectColorScheme": false,
  "workbench.preferredLightColorTheme": "Catppuccin Mocha",
  "workbench.preferredDarkColorTheme": "After Dark",

  "sundial.sunrise": "08:00",
  "sundial.sunset": "17:00",
  "[mdx]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  }
}
